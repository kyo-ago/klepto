{
	"name": "Klepto proxy",
	"version": "1.5",
	"manifest_version": 2,
	"minimum_chrome_version": "25",
	"icons": {
		"16": "logo.png",
		"128": "logo.png"
	},
	"app": {
		"background": {
			"scripts": [
				"/lib/heir.js",
				"/lib/EventEmitter.js",
				"/lib/micro-location.js",
				"/lib/jsdeferred.js",
				"/src/lib/utils.js",
				"/src/lib/Response.js",
				"/src/lib/Response/FileSystem.js",
				"/src/lib/Response/Text.js",
				"/src/proxy/SocketTable.js",
				"/src/proxy/Header.js",
				"/src/proxy/Http.js",
				"/src/proxy/Waterfall.js",
				"/src/proxy/Forwarder.js",
				"/src/proxy/Listener.js",
				"/src/background.js"
			]
		}
	},
	"sandbox" : {
		"pages" : ["/html/sandbox.html"]
	},
	"permissions": [
		"storage",
		"contextMenus",
		{"fileSystem": ["write"]},
		{"socket": ["tcp-listen", "tcp-connect"]}
	]
}